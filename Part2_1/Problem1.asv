clear
close all
clc

%% Dynamics
A1 = [1.6 2; -4 -1.8];
A2 = [-1.8 4; -2 1.6];
nx = size(A1,1);

% a
a = 0:0.01:1;
As = zeros(nx,nx,length(a));
for i = 1:length(a)
    As(:,:,i) = a(i)*A1 + (1-a(i))*A2;
end

figure
hold on
for i = 1:length(a)
    plot(eig(As(:,:,i)),'ro')
end
xlim([-1,1])
ylim([-3,3])
grid on